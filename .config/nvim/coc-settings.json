{
    "diagnostic.checkCurrentLine": true,
    "languageserver": {
        "ccls": {
            "enabled": false,
            "command": "ccls",
            "filetypes": [
                "c",
                "cc",
                "cpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "cacheFormat": "json",
                "highlight": {
                    "lsRanges": true
                }
            }
        },
        "coc-clangd": {
            "enabled": true,
            "command": "clangd",
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/clangd"
                }
            },
            "filetypes": [
                "c",
                "cc",
                "cpp",
                "c++",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                "compile_flags.txt",
                "compile_commands.json"
            ]
        },
        "lua": {
            "command": "lua-language-server",
            "filetypes": [
                "lua"
            ],
            "rootPatterns": [
                ".git/"
            ],
            "settings": {
                "Lua": {
                    "workspace": {
                        "maxPreload": 2000,
                        "preloadFileSize": 1000,
                        "checkThirdParty": false
                    },
                    "runtime": {
                        "version": "Lua 5.4.4"
                    },
                    "diagnostics": {
                        "enable": true,
                        "globals": [
                            "times",
                            "vim"
                        ],
                        "disable": [
                            "lowercase-global"
                        ]
                    }
                }
            }
        }
    }
}
