exec audacious
exec urxvt -name scratchpad -e keepass2
exec --no-startup-id i3-msg 'workspace $ws10; exec thunar /media/aim/Media/Music; move right; workspace $ws1'
exec --no-startup-id i3-msg 'workspace $ws3; exec terminator -x vim +SimplenoteList; move right;workspace $ws1'
exec i3-sensible-terminal #in 1st workspace by default

